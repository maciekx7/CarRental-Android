<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerMakeSelector"
                android:layout_width="269dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/car_make_add"
                android:layout_width="66dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:text="+" />

            <Button
                android:id="@+id/car_make_delete"
                android:layout_width="66dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:text="X" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Model" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerModelSelector"
                android:layout_width="267dp"
                android:layout_height="61dp" />

            <Button
                android:id="@+id/car_model_add"
                android:layout_width="66dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:text="+" />

            <Button
                android:id="@+id/car_model_delete"
                android:layout_width="66dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:text="X" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIN" />

        <EditText
            android:id="@+id/inputVIN"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cost" />

        <EditText
            android:id="@+id/inputCost"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/buttonAddCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>